<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.detail.DetailFragment">

    <!-- Konten Scroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Nama Barang -->
            <TextView
                android:id="@+id/tvNamaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Nama Barang"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Stok Gudang-->
            <LinearLayout
                android:id="@+id/tvStokKantin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stok Gudang"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/valueStokGudang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Garis Pembatas -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="#CCCCCC" />

            <!-- Judul Produk -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Stock Gudang"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <!-- Terjual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tambah Stock"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnMinusTerjual"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_round_button_blue"
                    android:contentDescription="Kurangi"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_remove_24" />

                <TextView
                    android:id="@+id/valueTerjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="0"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnPlusTerjual"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_round_button_red"
                    android:contentDescription="Tambah"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_add_24" />
            </LinearLayout>
            <!-- Judul Produk -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Stock Kantin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tambah Stock"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnMinusTerjualg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_round_button_blue"
                    android:contentDescription="Kurangi"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_remove_24" />

                <TextView
                    android:id="@+id/valueTerjualg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="0"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnPlusTerjualg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_round_button_red"
                    android:contentDescription="Tambah"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/baseline_add_24" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Tombol Edit & Simpan -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnEditt"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Edit"
            android:textColor="#009688"
            android:background="@drawable/bg_button_stroke"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Simpan"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_filled"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
