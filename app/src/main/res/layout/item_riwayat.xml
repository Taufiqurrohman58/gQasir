<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_cart_item"
    android:padding="12dp">

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/tvNamaProduk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Produk"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvJumlah"
        app:layout_constraintHorizontal_bias="0" />

    <!-- Jumlah -->
    <TextView
        android:id="@+id/tvJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2x"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/tvNamaProduk"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Batalkan -->
    <Button
        android:id="@+id/btnBatalkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batalkan"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:backgroundTint="#FF5252"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaProduk"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Harga -->
    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rp 5.000"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvJumlah"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Total Harga -->
    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total: Rp 10.000"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvHarga"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
